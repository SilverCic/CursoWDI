{{!-- FILA 1 --}}
<div class="container" style="margin-top: 100px">
    <div class="row">
        <div class="col">
            <p class="text-end">
                <span>Hola {{user}}!</span>
                <a href="/admin/login/logout" class="btn btn-danger">Log Out<i class="fas fa-sign-out-all"></i></a>
            </p>
    </div>
</div>
{{!-- FILA 2 --}}
<div class="row">
    <div class="col-11" style="margin-top: -9px ;">
        <h2>Listado de Novedades</h2>
    </div>
    <div class="col  text-right">
        <a href="/admin/novedades/agregar" class="btn btn-success"><i class="fas fa-plus"></i>Nuevo</a>
    </div>
</div>
{{!-- FILA 3 --}}
<div class="row">
    <div class="col-12">
        <table class="table col-12">
            <thead>
                <tr class="table-dark">
                    <th scope="col-1">#</th>
                    <th scope="col-5">Titulo</th>
                    <th scope="col-5" class="text-right">Acciones</th>
                </tr>
            </thead>
            <tbody>
                {{#each novedades}}
                <tr>
                    <th scope="row">{{id_novedades}}</th>
                    <td>{{titulo}}</td>
                    <td class="text-right">
                        <a href="/admin/novedades/modificar/{{id_novedades}}" class="btn btn-secondary"><i class="fas fa-pencil-alt"></i></a>
                        <a href="/admin/novedades/eliminar/{{id_novedades}}" class="btn btn-secondary"><i class="fas fa-trash"></i></a>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>